<% layout('layout') -%>

<div class="container">

  <div class="row">

    <% if(product) { %>

    <div class="col-md-4">
        <!-- <a href="/product/<%= product._id %>"> -->
          <div class="thumbnail">
            <img src="<%= product.image %>">
            <div class="caption">
              <h3><%= product.name %></h3>
              <p><%= product.category.name %></p>
              <p>$<%= product.price %></p>
              <p><button type="button" id="<%= product.id %> | <%= product.name %> | <%= product.category.name %> | <%= product.image %> | $<%= product.price %>" class="btn btn-primary btn-product">Buy Now</button></p>
            </div>
          </div>
        <!-- </a> -->
    </div>
    <% } %>
  </div>
</div>